{
	// See http://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "0.1.0",
	"command": "grunt",
	"isShellCommand": true,
	"args": ["--no-color"],
	"showOutput": "always", 
	"tasks": [
		{
			"taskName": "build",
			"args": [], 
			"isBuildCommand": true, 
			"problemMatcher": ["$tsc", {
                "owner": "tslint",
                "fileLocation": [
                    "relative",
                    "${workspaceRoot}"
                ],
                "severity": "warning",
                "pattern": {
                    "regexp": "^(\\S.*)\\[(\\d+), (\\d+)\\]:\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "message": 4
                }
            }]
		}	
	]
}